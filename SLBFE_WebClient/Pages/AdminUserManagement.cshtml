@page
@model SLBFE_WebClient.Pages.AdminUserManagementModel
@{
    ViewData["Title"] = "Users";
}

<div class="container">
        <div class="breadcrumb-header justify-content-between">
    <div class="row">
        <div class="col-md-6">
            <h4 class="content-title mb-0 my-auto">User Management</h4>
        </div>
        <div class="col-md-6 ">
        <div class="pull-right">
            <button type="button" class="btn btn-success " id="btnAdd" onclick="showModal()"><em class="fa fa-plus"></em>Add</button>
        </div>
        </div>
    </div>
</div>

<div class="text-center" style="margin-top: 10px;">
    <div class="row">
        <div class="col-md-12">
            <table id="userDetails" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th style="width:200px"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="userAddModal" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title ">Create new user</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">

                <div class="modal-body pt-6" style="padding-left: 35px;">

                    <div class="form-group row col-md-12">

                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Name</span>
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" id="insName" class="form-control"/>
                        </div>
                    
                    </div>

                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Email</span>
                        </div>
                         <div class="form-group col-md-6">
                            <input type="text" id="insEmail" class="form-control"/>
                        </div>
                        
                    </div>
                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Password</span>
                        </div>
                         <div class="form-group col-md-6">
                            <input type="password" id="insPassword" class="form-control"/>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                <div class="form-group mb-0 mt-0 justify-content-end text-right displayFlex">
                    <div class="col-md-12">
                        <button type="submit" id="verifyButton" class="btn btn-block btn-success wd-100-f" onclick="AddNewUser()">Add</button>
                    </div>
                </div>
            </div>
                </div>
            </form>
        </div>
        </div>
    </div>

   

    <div id="userDeleteModal" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title ">Delete User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">

                <div class="modal-body pt-6" style="padding-left: 35px;">

                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <label id="txtDelId" style="display:none;"></label>
                            <label> Are you sure you want to delete ?</label>
                        </div>
                    
                    </div>
                    <div class="modal-footer">
                <div class="form-group mb-0 mt-0 justify-content-end text-right displayFlex">
                    <div class="col-md-12">
                        <button type="submit" id="verifyButton" class="btn btn-block btn-secondary wd-100-f pull-left" onclick="modelClose()">Cancel</button>
                        <button type="submit" id="verifyButton" class="btn btn-block btn-success wd-100-f pull-right" onclick="RemoveUser()">Delete</button>
                    </div>
                </div>
            </div>
                </div>
            </form>
        </div>
        </div>
    </div>

    </div>

<script src="~/js/BasicScript/AdminUserManagement.js" language="javascript" type="text/javascript"></script>
