@page
@model SLBFE_WebClient.Pages.JobSeekersModel
@{
    ViewData["Title"] = "Job Seekers";
}

<div class="text-center">
    <h1 class="display-4">Job Seekers</h1>
    <div class="row">
        <div class="col-md-12">
            <table id="citizensDetails" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Proffession</th>
                        <th>Employed</th>
                        <th style="width:200px"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <div id="citizensDetailModel" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title ">Verify - Citizens Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">

                <div class="modal-body pt-4" style="padding-left: 35px;">

                    <div class="form-group row col-md-12">

                        <div class="form-group col-md-4">
                            <span style="font-weight:bold">Name</span>
                            <label id="txtName"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <span style="font-weight:bold">NIC</span>
                            <label id="txtNic"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <span style="font-weight:bold">Address</span>
                            <label id="txtAddress"></label>
                        </div>

                    </div>

                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-4">
                            <span style="font-weight:bold">Email</span>
                            <label id="txtEmail"></label>
                        </div>
                         <div class="form-group col-md-4">
                            <span style="font-weight:bold">Employment Status</span>
                            <label id="textEmploymentStatud"></label>
                        </div>
                        
                    </div>
                    
                    <div class="form-group col-md-12">
                           <table id="qualificationDetaisl" class="table text-md-nowrap">
                               <thead>
                                   <th>Document Name</th>
                                   <th>Options</th>
                               </thead>
                               <tbody>
                               </tbody>
                           </table>
                        </div>
                    <div class="modal-footer">
                <div class="form-group mb-0 mt-0 justify-content-end text-right displayFlex">
                    <div class="col-md-12">
                        <button type="submit" id="verifyButton" class="btn btn-block btn-primary wd-100-f" onclick="VerifyInformation()">Verify</button>
                    </div>
                </div>
            </div>
                </div>
            </form>
        </div>
        </div>
    </div>

     <div id="citizensConnectionsModel" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title ">Citizen Connection Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">

                <div class="modal-body pt-4" style="padding-left: 35px;">

                    <div class="form-group col-md-12">
                           <table id="connectionDetails" class="table text-md-nowrap">
                               <thead>
                                   <th>Name</th>
                                   <th>Email</th>
                                   <th>Proffession</th>
                               </thead>
                               <tbody>
                               </tbody>
                           </table>
                        </div>
                  
                </div>
            </form>
        </div>
        </div>
    </div>

</div>

<script src="~/js/BasicScript/JobSeekers.js" language="javascript" type="text/javascript"></script>