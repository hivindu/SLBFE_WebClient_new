@page
@model SLBFE_WebClient.Pages.VacancyApprovalModel
@{
    ViewData["Title"] = "Pending Approval Vacancies";
}

<div class="text-center">
    <h1 class="display-4">Approval Pending Vacancies</h1>
    <div class="row">
        <div class="col-md-12">
            <table id="pendingApprovalVacancies" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Company Name</th>
                        <th>JobTitle</th>
                        <th style="width:100px"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <div id="vacancyDetails" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title ">Verify - Job Vacancy</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">

                <div class="modal-body pt-6" style="padding-left: 35px;">

                    <div class="form-group row col-md-12">

                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Title</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label id="txtTitle"></label>
                            <label id="txtId" style="display:none;"></label>
                        </div>
                    
                    </div>

                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Job Description</span>
                        </div>
                         <div class="form-group col-md-6">
                            <label id="txtDescripion"></label>
                        </div>
                        
                    </div>
                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Deadline</span>
                        </div>
                         <div class="form-group col-md-6">
                            <label id="txtDeadline"></label>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                <div class="form-group mb-0 mt-0 justify-content-end text-right displayFlex">
                    <div class="col-md-12">
                        <button type="submit" id="verifyButton" class="btn btn-block btn-success wd-100-f" onclick="ApproveVacancy()">Approve</button>
                    </div>
                </div>
            </div>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

<script src="~/js/BasicScript/VacancyApproval.js" language="javascript" type="text/javascript"></script>