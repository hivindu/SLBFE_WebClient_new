@page
@model SLBFE_WebClient.Pages.ComplaintsModel
@{
    ViewData["Title"] = "Complaints";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-6">
            <h4 class="content-title mb-0 my-auto">Complaint Management</h4>
        </div>
        </div>
    <div class="row">
        <div class="col-md-12">
            <table id="complaintDetails" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Message</th>
                        <th style="width:100px"></th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>

    <div id="CommentModel" class="modal right fadeModal fade modal-center" role="dialog">
        <div class="modal-dialog" style="width:882px">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title">  </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form-horizontal" id="insertForm">
                <div class="modal-body pt-4" style="padding-left: 35px;">
                    <div class="form-group row col-md-12">
                        <div class="form-group col-md-6">
                            <label id="txtComplaintId" style="display : none;"></label>
                            <span style="font-weight:bold">Complain</span>
                            <label id="txtComplain"></label>
                        </div>
                        <div class="form-group col-md-6">
                            <span style="font-weight:bold">Reply</span>
                            <input type="text" id="replyMessage" placeholder="Message"/>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <div class="form-group mb-0 mt-0 justify-content-end text-right displayFlex">
                            <div class="col-md-12">
                                <button type="submit" id="verifyButton" class="btn btn-block btn-primary wd-100-f" onclick="SendReply()">Reply</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </div>

</div>

<script src="~/js/BasicScript/complaints.js" language="javascript" type="text/javascript"></script>